<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="390dp"
    android:layout_height="420dp"
    android:background="#483d8b"
    android:padding="10dp"
    tools:context=".Grades_Charts">
    <Button
        android:layout_width="24dp"
        android:id="@+id/closebtn"
        android:onClick="cls"
        android:layout_margin="5dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_close_gold_24dp"/>
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/gradeschart"
        android:layout_width="400dp"
        android:padding="10dp"
        android:layout_below="@id/closebtn"
        android:layout_height="300dp"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/postbutton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/gradeschart"
        android:background="@layout/rounded_border_button"
        android:drawableStart="@drawable/ic_check_black_24dp"
        android:padding="10dp"
        android:text="Done"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>