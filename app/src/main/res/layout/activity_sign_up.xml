<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".SignUp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/login"
            android:layout_centerInParent="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="28sp"
                android:id="@+id/headertext"
                android:textColor="@android:color/holo_orange_light"/>
            <EditText
                android:id="@+id/idbox"
                android:layout_below="@id/headertext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_border_edittext"
                android:layout_marginTop="40dp"
                android:hint="ID"
                android:padding="5dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="#ba2749"
                android:textAlignment="center"
                android:inputType="number" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="email"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:textColor="#ba2749"
                android:layout_below="@id/idbox"
                android:id="@+id/emailbox"
                android:padding="5dp"
                android:textColorHint="@android:color/darker_gray"
                android:background="@layout/rounded_border_edittext"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:inputType="textEmailAddress" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="password"
                android:textColor="#ba2749"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:id="@+id/passwordbox"
                android:layout_below="@id/emailbox"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:textColorHint="@android:color/darker_gray"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@layout/rounded_border_edittext"
                android:inputType="textPassword" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You are a/an :"
                android:textStyle="bold"
                android:id="@+id/text"
                android:padding="5dp"
                android:textColor="@color/cardview_light_background"
                android:layout_below="@id/passwordbox"
                android:layout_marginTop="25dp"
                android:textSize="18sp"
                android:layout_marginEnd="5dp"/>

            <Spinner
                android:id="@+id/type"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/passwordbox"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/text"
                android:textAlignment="center"
                android:textColor="#ba2749"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/signupbtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/type"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:background="@layout/rounded_border_button"
                android:onClick="signup"
                android:padding="5dp"
                android:text="Sign up"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/signupbtn"
                android:onClick="Haveaccountclick"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:clickable="true"
                android:padding="5dp"
                android:text="I have an account"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="22sp"
                android:textStyle="bold"
                android:focusable="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>